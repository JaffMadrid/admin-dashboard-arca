{
    "version": 2,
    "builds": [
        {
            "src": "backend/index.js",
            "use": "@vercel/node"
          },
          {
            "src": "frontend/**",
            "use": "@vercel/static"
        }   
    ],
    "routes": [
        {
            "src": "/authentication/(.*)",
            "dest": "backend/index.js"
          },
          {
            "src": "/dashboard/(.*)",
            "dest": "backend/index.js"
          },
          {
            "src": "/api/(.*)",
            "dest": "backend/index.js"
          },
          {
            "src": "/(.*)\\.(.+)",
            "dest": "frontend/$1.$2"
          },
          {
            "src": "/(.*)", 
            "dest": "frontend/index.html"
          }
    ]
}